{% extends 'signinup.html.twig' %}

{% block title %}Reset Password - Gaming{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(to bottom, #0f1117, #1e222e);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            min-height: 100vh;
        }

        .reset_section {
            padding: 100px 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .reset_form {
            background-color: rgba(45, 48, 58, 0.9);
            border-radius: 15px;
            padding: 40px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            margin-bottom: 50px;
        }

        .reset_form h2 {
            color: #fff;
            text-align: center;
            margin-bottom: 30px;
            font-size: 36px;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 600;
        }

        .form_group {
            margin-bottom: 25px;
        }

        .form_group label {
            color: #fff;
            font-weight: 500;
            margin-bottom: 10px;
            display: block;
        }

        .form_control {
            width: 100%;
            padding: 12px 15px;
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 5px;
            color: #fff;
            font-size: 16px;
            transition: all 0.3s;
        }

        .form_control:focus {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: #ff0000;
            outline: none;
        }

        .reset_btn {
            background: linear-gradient(to right, #ff0000, #ff5e00);
            color: #fff;
            border: none;
            width: 100%;
            padding: 15px;
            border-radius: 5px;
            font-size: 18px;
            text-transform: uppercase;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 20px;
        }

        .reset_btn:hover {
            background: linear-gradient(to right, #ff5e00, #ff0000);
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(255, 0, 0, 0.2);
        }

        .form_footer {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            color: #fff;
        }

        .form_footer a {
            color: #ff5e00;
            text-decoration: none;
            transition: all 0.3s;
        }

        .form_footer a:hover {
            color: #ff0000;
            text-decoration: underline;
        }
        
        /* Style pour les messages d'alerte */
        .alert {
            padding: 12px;
            margin-top: 20px;
            border-radius: 5px;
            color: #fff;
        }
        
        .alert-success {
            background-color: rgba(40, 167, 69, 0.7);
        }
        
        .alert-danger {
            background-color: rgba(220, 53, 69, 0.7);
        }
    </style>
{% endblock %}

{% block body %}
<div class="body_bg">
    <section class="reset_section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="reset_form">
                        <h2>Reset Password</h2>
                        
                        {{ form_start(form) }}
                            <div class="form_group">
                                <label for="new_password">New Password</label>
                                {{ form_widget(form.new_password, {'attr': {'class': 'form_control', 'placeholder': 'Enter your new password'}}) }}
                            </div>
                            
                            <button type="submit" class="reset_btn">RESET PASSWORD</button>
                        {{ form_end(form) }}
                        
                        <div class="form_footer">
                            <a href="{{ path('app_login') }}">Back to Sign In</a>
                        </div>
                        
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}