{% extends 'home.html.twig' %}

{% block title %}Détail de la commande{% endblock %}

{% block content %}
<section class="section_padding">
    <div class="container">
        <h2 class="text-center mb-4">Détail de la Commande #{{ commande.idCommande }}</h2>
        <ul class="list-group">
            <li class="list-group-item"><strong>ID Utilisateur:</strong> {{ commande.idu }}</li>
            <li class="list-group-item"><strong>Date de commande:</strong> {{ commande.dateCommande|date('d/m/Y') }}</li>
            <li class="list-group-item"><strong>Montant total:</strong> {{ commande.montantTotal | number_format(2, ',', ' ') }} €</li>
        </ul>
        <div class="mt-4 text-center">
            <a href="{{ path('app_commande_index_frontend') }}" class="btn_1">← Retour à la liste</a>
        </div>
    </div>
</section>
{% endblock %}
