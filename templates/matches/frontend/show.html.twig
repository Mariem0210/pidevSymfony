{% extends 'home.html.twig' %}

{% block title %}Détails du match - {{ match.equipe1 }} vs {{ match.equipe2 }}{% endblock %}

{% block content %}
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>{{ match.equipe1 }} vs {{ match.equipe2 }}</h2>
                        <p>Détails du match</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb end -->

<!-- match details section -->
<section class="about_us section_padding">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-md-6 col-lg-5">
                <div class="about_img">
                    <img src="{{ asset('assets1/img/match-placeholder.jpg') }}" alt="Match Image">
                </div>
            </div>
            <div class="col-md-6 col-lg-6">
                <div class="about_text">
                    <h3>Résumé</h3>
                    <p>Ce match fait partie du tournoi : <strong>{{ match.tournoi.nomt }}</strong></p>

                    <div class="about_single_item">
                        <h4>Détails du match</h4>
                        <ul class="list-unstyled">
                            <li><i class="ti-check"></i> <span>Équipe 1 :</span> {{ match.equipe1 }}</li>
                            <li><i class="ti-check"></i> <span>Équipe 2 :</span> {{ match.equipe2 }}</li>
                            <li><i class="ti-check"></i> <span>Date du match :</span> {{ match.dateDebutm|date('d/m/Y') }}</li>
                            <li><i class="ti-check"></i> <span>Statut :</span> {{ match.status }}</li>
                            <li><i class="ti-check"></i> <span>Score :</span> {{ match.score }}</li>
                        </ul>
                    </div>

                    <a href="{{ path('app_matches_index_frontend') }}" class="btn_1">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- match details section end -->
{% endblock %}
