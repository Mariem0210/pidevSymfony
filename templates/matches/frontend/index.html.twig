{% extends 'home.html.twig' %}

{% block title %}Liste des matchs{% endblock %}

{% block content %}
<!-- banner part start-->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="banner_text text-center">
                    <div class="banner_text_iner">
                        <h1>Nos Matchs</h1>
                        <p>Découvrez les matchs programmés dans nos tournois</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner part end-->

<!-- matches list section -->
<section class="learning_part section_padding">
    <div class="container">
        <div class="row">
            {% for match in matches %}
                <div class="col-md-4 mb-4">
                    <div class="single_gaming gaming_section">
                        
                        <div class="learning_member_text">
                            <h4>{{ match.equipe1 }} vs {{ match.equipe2 }}</h4>
                            <p>
                                <strong>Tournoi :</strong> {{ match.tournoi.nomt }}<br>
                                <strong>Date :</strong> {{ match.dateDebutm|date('d/m/Y') }}<br>
                                <strong>Statut :</strong> {{ match.status }}<br>
                                <strong>Score :</strong> {{ match.score }}
                            </p>
                            <a href="{{ path('app_matches_show_frontend', {'idm': match.idm}) }}" class="btn_2">Voir Détails</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <div class="no_data">
                        <h3>Aucun match disponible pour le moment.</h3>
                        <p>Veuillez revenir ultérieurement pour découvrir les nouveaux matchs programmés.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- matches list section end -->
{% endblock %}
