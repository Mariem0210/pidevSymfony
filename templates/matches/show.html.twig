{% extends 'base.html.twig' %}

{% block title %}Matches{% endblock %}

{% block body %}
    <h1>Matches</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idm</th>
                <td>{{ match.idm }}</td>
            </tr>
            <tr>
                <th>Idt</th>
                <td>{{ match.idt }}</td>
            </tr>
            <tr>
                <th>Equipe1</th>
                <td>{{ match.equipe1 }}</td>
            </tr>
            <tr>
                <th>Equipe2</th>
                <td>{{ match.equipe2 }}</td>
            </tr>
            <tr>
                <th>Date_debutm</th>
                <td>{{ match.dateDebutm ? match.dateDebutm|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ match.status }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ match.score }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_matches_index') }}">back to list</a>

    <a href="{{ path('app_matches_edit', {'idm': match.idm}) }}">edit</a>

    {{ include('matches/_delete_form.html.twig') }}
{% endblock %}
