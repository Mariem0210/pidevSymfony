{% extends 'home.html.twig' %}

{% block title %}Détails du produit - {{ produit.nom }}{% endblock %}

{% block content %}
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>{{ produit.nom }}</h2>
                        <p>Détails du produit</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb end -->

<!-- product details section -->
<section class="about_us section_padding">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-md-6 col-lg-5">
                <div class="about_img">
                    {% if produit.imageProduit %}
                        <img src="{{ asset('uploads/produits/' ~ produit.imageProduit) }}" alt="{{ produit.nom }}">
                    {% else %}
                        <img src="{{ asset('assets1/img/produit-placeholder.jpg') }}" alt="Image non disponible">
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6 col-lg-6">
                <div class="about_text">
                    <h3>Description</h3>
                    <p>{{ produit.description ? produit.description : 'Aucune description disponible pour ce produit.' }}</p>

                    <div class="about_single_item">
                        <h4>Détails du produit</h4>
                        <ul class="list-unstyled">
                            <li><i class="ti-check"></i> <span>Nom :</span> {{ produit.nom }}</li>
                            <li><i class="ti-check"></i> <span>Prix :</span> {{ produit.prix }} €</li>
                            <li><i class="ti-check"></i> <span>Stock :</span> {{ produit.stock }}</li>
                            <li><i class="ti-check"></i> <span>Catégorie :</span> {{ produit.categorie ? produit.categorie : 'Non spécifiée' }}</li>
                            <li><i class="ti-check"></i> <span>Date de création :</span> {{ produit.dateCreation ? produit.dateCreation|date('d/m/Y') : 'N/A' }}</li>
                        </ul>
                    </div>

                    <a href="{{ path('app_produit_index_frontend') }}" class="btn_1">Retour à la boutique</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product details section end -->
{% endblock %}
