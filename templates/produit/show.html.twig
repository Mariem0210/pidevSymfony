{% extends 'base.html.twig' %}

{% block title %}Détails du Produit{% endblock %}

{% block content %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">
                                <i class="material-icons opacity-10 me-2">inventory</i>
                                Détails du Produit
                            </h6>
                        </div>
                    </div>
                    <div class="card-body px-0 pb-2">
                        <div class="table-responsive p-4">
                            <table class="table align-items-center mb-0">
                                <tbody>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">ID Produit</th>
                                        <td class="px-4">{{ produit.idProduit }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Nom</th>
                                        <td class="px-4">{{ produit.nom }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Description</th>
                                        <td class="px-4">{{ produit.description }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Prix</th>
                                        <td class="px-4">{{ produit.prix }} DT</td>
                                    </tr>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Stock</th>
                                        <td class="px-4">{{ produit.stock }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Date Création</th>
                                        <td class="px-4">{{ produit.dateCreation ? produit.dateCreation|date('Y-m-d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Catégorie</th>
                                        <td class="px-4">{{ produit.categorie }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Image</th>
                                        <td class="px-4">
                                            {% if produit.imageProduit %}
                                                <img src="{{ asset('uploads/products/' ~ produit.imageProduit) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="max-width: 150px;">
                                            {% else %}
                                                Aucune image
                                            {% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer p-3 d-flex justify-content-between">
                        <a href="{{ path('app_produit_index') }}" class="btn btn-outline-secondary">
                            <i class="material-icons text-sm me-2">arrow_back</i> Retour à la liste
                        </a>
                        <div>
                            <a href="{{ path('app_produit_edit', {'id_produit': produit.id_produit}) }}" class="btn btn-outline-primary me-2">
                                <i class="material-icons text-sm me-2">edit</i> Modifier
                            </a>
                            {{ include('produit/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}