{% extends 'home.html.twig' %}

{% block title %}Liste des offres de recrutement{% endblock %}

{% block content %}
<!-- banner part start-->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="banner_text text-center">
                    <div class="banner_text_iner">
                        <h1>Nos Offres de Recrutement</h1>
                        <p>Découvrez nos opportunités de carrière et rejoignez notre équipe</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner part end-->

<!-- offres list section -->
<section class="learning_part section_padding">
    <div class="container">
        <div class="row">
            {% for offre in offre_de_rectrutements %}
                <div class="col-md-4 mb-4">
                    <div class="single_gaming gaming_section">
                        <div class="learning_member_text">
                            <h4>{{ offre.poste_recherche }}</h4>
                            <ul class="list-unstyled mb-3">
                                <li><i class="ti-check"></i> Niveau requis: {{ offre.niveu_requis }}</li>
                                <li><i class="ti-check"></i> Salaire: {{ offre.salaire_propose }} DT</li>
                                <li><i class="ti-check"></i> Type de contrat: {{ offre.contrat }}</li>
                            </ul>
                            <a href="{{ path('app_offre_de_rectrutement_show_frontend', {'ido': offre.ido}) }}" class="btn_2">Voir Détails</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <div class="no_data">
                        <h3>Aucune offre de recrutement disponible pour le moment.</h3>
                        <p>Veuillez revenir ultérieurement pour découvrir nos nouvelles opportunités.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- offres list section end -->
{% endblock %}