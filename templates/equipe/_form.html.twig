{{ form_start(form, {'attr': {'id': 'equipeForm', 'class': 'needs-validation'}}) }}
    {% for field in form %}
        {% if field.vars.name != '_token' %}
            <div class="row">
                <div class="col-12 mb-3">
                    <div class="input-group input-group-static mb-4">
                        {{ form_label(field, null, {'label_attr': {'class': 'ms-0'}}) }}
                        {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                        <span class="text-danger error-message">{{ form_errors(field) }}</span>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
    
    <div class="row mt-4">
        <div class="col-12">
            <button type="submit" class="btn bg-gradient-primary">
                <i class="material-icons text-sm me-2">save</i>
                {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
{{ form_end(form) }}

<style>
.error-message {
    display: block;
    font-size: 0.75rem;
    margin-top: 0.25rem;
}
</style>