{% extends 'base.html.twig' %}

{% block title %}Nouvelle Équipe{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Créer une Équipe</h6>
                </div>
            </div>
            <div class="card-body px-4 pb-2">
                {{ include('equipe/_form.html.twig', {'button_label': 'Créer'}) }}
            </div>
            <div class="card-footer p-3">
                <a href="{{ path('app_equipe_index') }}" class="btn btn-outline-secondary">
                    <i class="material-icons text-sm me-2">arrow_back</i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}