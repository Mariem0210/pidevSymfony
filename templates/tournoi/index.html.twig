{% extends 'base.html.twig' %}

{% block title %}Liste des Tournois{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">
                            <i class="material-icons opacity-10 me-2">sports_esports</i>
                            Gestion des Tournois
                        </h6>
                    </div>
                </div>
                <div class="card-body px-4 pb-2">
                    <div class="mb-3">
                        <form method="get" class="form-inline">
                            <label for="sort" class="me-2 fw-bold">Trier par :</label>
                            <select name="sort" id="sort" class="form-select d-inline w-auto" onchange="this.form.submit()">
                                <option value="statutt" {% if app.request.get('sort') == 'statutt' %}selected{% endif %}>Statut</option>
                                <option value="date" {% if app.request.get('sort') == 'date' %}selected{% endif %}>Date de début</option>
                            </select>
                        </form>
                    </div>
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Date Début</th>
                                    <th>Date Fin</th>
                                    <th>Équipes</th>
                                    <th>Prix</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for tournoi in tournois %}
                                <tr>
                                    <td class="ps-4">{{ tournoi.idt }}</td>
                                    <td>{{ tournoi.nomt }}</td>
                                    <td>{{ tournoi.descriptiont|slice(0, 30) ~ (tournoi.descriptiont|length > 30 ? '...' : '') }}</td>
                                    <td>{{ tournoi.dateDebutt ? tournoi.dateDebutt|date('Y-m-d') : '' }}</td>
                                    <td>{{ tournoi.dateFint ? tournoi.dateFint|date('Y-m-d') : '' }}</td>
                                    <td>{{ tournoi.nbrEquipes }}</td>
                                    <td>{{ tournoi.prixt }}</td>
                                    <td>{{ tournoi.statutt }}</td>
                                    <td>
                                        <a href="{{ path('app_tournoi_show', {'idt': tournoi.idt}) }}" class="btn btn-link text-info px-2 mb-0">
                                            <i class="material-icons text-sm me-1">visibility</i>Voir
                                        </a>
                                        <a href="{{ path('app_tournoi_edit', {'idt': tournoi.idt}) }}" class="btn btn-link text-dark px-2 mb-0">
                                            <i class="material-icons text-sm me-1">edit</i>Modifier
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9" class="text-center p-4">Aucun tournoi trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer p-3">
                    <a href="{{ path('app_tournoi_new') }}" class="btn bg-gradient-primary">
                        <i class="material-icons text-sm me-2">add</i> Nouveau Tournoi
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
