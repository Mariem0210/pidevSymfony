<form method="post" action="{{ path('app_certificat_delete', {'id': certificat.idc}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce certificat ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ certificat.idc) }}">
    <button class="btn bg-gradient-danger">
        <i class="material-icons opacity-10">delete</i>
        Supprimer
    </button>
</form>