{% extends 'base.html.twig' %}

{% block title %}Modifier un Certificat{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">
                            <i class="material-icons opacity-10">edit</i>
                            Modifier un Certificat
                        </h6>
                    </div>
                </div>
                <div class="card-body px-4 pb-2">
                    {{ include('certificat/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
                <div class="card-footer p-3 d-flex justify-content-between">
                    <a href="{{ path('app_certificat_index') }}" class="btn bg-gradient-secondary">
                        <i class="material-icons opacity-10">arrow_back</i>
                        Retour à la liste
                    </a>
                    <div>
                        {{ include('certificat/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}