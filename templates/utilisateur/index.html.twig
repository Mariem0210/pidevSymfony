{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block content %}
<div class="container-fluid py-4">


    <!-- Contenu principal -->
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">
                            <i class="material-icons opacity-10">people</i>
                            Liste des Utilisateurs
                        </h6>
                    </div>
                </div>
                
                <div class="card-body px-0 pb-2">
                    <!-- Formulaire de tri -->
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <form method="get" class="form-inline">
                    <label for="sort" class="me-2 fw-bold">Trier par :</label>
                    <select name="sort" id="sort" class="form-select d-inline w-auto" onchange="this.form.submit()">
                        <option value="dateinscriu" {% if app.request.get('sort') == 'dateinscriu' %}selected{% endif %}>Date d'inscription</option>
                        <option value="type" {% if app.request.get('sort') == 'type' %}selected{% endif %}>Type</option>
                    </select>
                </form>
            </div>
        </div>
    </div>
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom & Prénom</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Téléphone</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Inscription</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for utilisateur in utilisateurs %}
                                <tr>
                                    <td class="ps-4">
                                        <p class="text-xs font-weight-bold mb-0">{{ utilisateur.idu }}</p>
                                    </td>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            {% if utilisateur.photoProfilu %}
                                            <div>
                                                <img src="{{ asset('uploads/profiles/' ~ utilisateur.photoProfilu) }}" class="avatar avatar-sm me-3 border-radius-lg" alt="Photo profil">
                                            </div>
                                            {% endif %}
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">{{ utilisateur.nomu }}</h6>
                                                <p class="text-xs text-secondary mb-0">{{ utilisateur.prenomu }}</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge badge-sm bg-gradient-{{ utilisateur.typeu == 'admin' ? 'danger' : 'success' }}">
                                            {{ utilisateur.typeu }}
                                        </span>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">{{ utilisateur.mailu }}</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">{{ utilisateur.numtelu ?? 'N/A' }}</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">{{ utilisateur.dateinscriu ? utilisateur.dateinscriu|date('d/m/Y') : '' }}</p>
                                    </td>
                                    <td class="align-middle">
                                        <a href="{{ path('app_utilisateur_show', {'idu': utilisateur.idu}) }}" class="btn btn-link text-info px-3 mb-0">
                                            <i class="material-icons text-sm me-2">visibility</i>
                                        </a>
                                        <a href="{{ path('app_profile_edit', {'idu': utilisateur.idu}) }}" class="btn btn-link text-dark px-3 mb-0">
                                            <i class="material-icons text-sm me-2">edit</i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center p-4">
                                        <p class="text-xs font-weight-bold mb-0">Aucun utilisateur trouvé</p>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer p-3">
                    <a href="{{ path('app_utilisateur_new') }}" class="btn bg-gradient-primary">
                        <i class="material-icons text-sm me-2">add</i> Nouvel Utilisateur
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}