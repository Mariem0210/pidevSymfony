{# templates/giveaway/front/index.html.twig #}
{% extends 'home.html.twig' %}

{% block title %}Current Giveaways{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Our Current Giveaways</h1>
        
        {% if admin_access %}
            <div class="mb-4">
                <a href="{{ path('app_giveaway_new') }}" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>
        {% endif %}

        <div class="row">
            {% for giveaway in giveaways %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ giveaway.title }}</h5>
                            <p class="card-text">{{ giveaway.shortDescription }}</p>
                            <a href="{{ path('app_giveaway_front_show', {'slug': giveaway.slug}) }}" 
                               class="btn btn-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">No giveaways available at the moment.</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}