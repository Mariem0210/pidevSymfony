{% extends 'home.html.twig' %}

{% block title %}Liste des Giveaways{% endblock %}

{% block content %}
<!-- banner part start-->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="banner_text text-center">
                    <div class="banner_text_iner">
                        <h1>Nos Giveaways</h1>
                        <p>Participez à nos concours et gagnez des récompenses exclusives</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner part end-->

<!-- giveaway list section -->
<section class="learning_part section_padding">
    <div class="container">
        <div class="row">
            {% for giveaway in giveaways %}
                <div class="col-md-4 mb-4">
                    <div class="single_gaming gaming_section">
                        <div class="gaming_img">
                            <img src="{{ asset('assets1/img/giveaway-placeholder.jpg') }}" alt="Image de giveaway">
                        </div>
                        <div class="learning_member_text">
                            <h4>{{ giveaway.titreg }}</h4>
                            <p>{{ giveaway.descg|slice(0, 100) }}{% if giveaway.descg|length > 100 %}...{% endif %}</p>
                            <a href="{{ path('app_giveaway_show_frontend', {'idg': giveaway.idg}) }}" class="btn_2">Voir Détails</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <div class="no_data">
                        <h3>Aucun giveaway disponible pour le moment.</h3>
                        <p>Revenez bientôt pour découvrir nos prochains concours.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- giveaway list section end -->
{% endblock %}