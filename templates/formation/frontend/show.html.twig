{% extends 'home.html.twig' %}

{% block title %}Détails de la formation - {{ formation.nomf }}{% endblock %}

{% block content %}
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>{{ formation.nomf }}</h2>
                        <p>Détails de la formation</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb end-->

<!-- formation details section -->
<section class="about_us section_padding">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-md-6 col-lg-5">
                <div class="about_img">
                    <img src="{{ asset('assets1/img/formation-placeholder.jpg') }}" alt="{{ formation.nomf }}">
                </div>
            </div>
            <div class="col-md-6 col-lg-6">
                <div class="about_text">
                    <h3>Description</h3>
                    <p>{{ formation.descriptionf }}</p>
                    
                    <div class="about_single_item">
                        <h4>Détails de la formation</h4>
                        <ul class="list-unstyled">
                            <li><i class="ti-check"></i> <span>Capacité:</span> {{ formation.capacitef }} places</li>
                            <li><i class="ti-check"></i> <span>Prix:</span> {{ formation.prixf }}DT</li>
                            <li><i class="ti-check"></i> <span>Niveau:</span> {{ formation.niveauf }}</li>
                            <li><i class="ti-check"></i> <span>Date de début:</span> {{ formation.dateDebut|date('d/m/Y') }}</li>
                            <li><i class="ti-check"></i> <span>Date de fin:</span> {{ formation.dateFin|date('d/m/Y') }}</li>
                        </ul>
                    </div>
                    
                    <a href="{{ path('app_formation_index_frontend') }}" class="btn_1">Retour à la liste</a>
                    <a href="#" class="btn_2 ml-3">S'inscrire</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- formation details section end -->
{% endblock %}